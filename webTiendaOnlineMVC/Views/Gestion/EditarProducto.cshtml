@model webTiendaOnlineMVC.Models.Productos

@{
    ViewData["Title"] = "EditarProducto";
}

<h1>Editar Producto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarProducto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductoId" class="control-label"></label>
                <input asp-for="ProductoId" class="form-control" readonly />
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagenUrl" class="control-label"></label>
                <input id="imagenUrlInput" asp-for="ImagenUrl" class="form-control" />
                <span asp-validation-for="ImagenUrl" class="text-danger"></span>
            </div>

            <img id="imagenProducto" src="@Model.ImagenUrl" alt="Imagen del producto" class="img-thumbnail smaller-image" />


            <div class="form-group">
                <input type="submit" value="grabar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br/>

<div class="mt-3">
    <a class="btn btn-warning" asp-action="ListarProductos">Regresar a la lista</a>
</div>

<script>
    document.getElementById('imagenUrlInput').addEventListener('input', function () {
        var imageUrl = this.value;
        document.getElementById('imagenProducto').src = imageUrl;
    });
</script>